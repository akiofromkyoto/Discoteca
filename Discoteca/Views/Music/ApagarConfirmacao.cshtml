@model MusicModel
@{
    ViewData["Title"] = "Confirmação apagar música";
}

<div class="text-center">
    <h3>Realmente deseja apagar a música (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary w-100 mb-2" role="button" asp-controller="Music" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger w-100" role="button" asp-controller="Music" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusção</a>